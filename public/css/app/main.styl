.navbar-nav>.active>a
    border: 1px solid #333; 

body
    background-color: #222
    margin: 0
    padding-top: 50px

.container
    width: 100vw
    padding: 0

#content
    height: calc(unquote('100vh - 50px'))

.tab
    float: left
    height: 100%

.tabTitleContainer
    height: 30px
    background-color:rgba(210,210,210,0.2)
    padding: 5px

.tabSeparator
    height: 100%
    width: 8px
    right: 0
    cursor: col-resize
    background-image:
        linear-gradient(to left, rgba(0, 0, 0, 1) 0%, rgba(84, 84, 84, 0.8) 100%)

#nav
    background-color: yellow
    width: 10vw

#form
    background-color: orange
    width: 35vw
    overflow-y: auto
    overflow-x: hidden

#map
    background-color: green
    width: 45vw

#utils
    background-color: brown
    // wenn nicht -1px
